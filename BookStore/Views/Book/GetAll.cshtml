@model IEnumerable<BookStore.Models.Domain.Book>
@{

}



<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Book/Add">Add more</a>
        </div>
    </div>

    <form asp-action="GetAll" asp-controller="Book" method="get">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search by book title" aria-label="Search" aria-describedby="basic-addon2" name="searchString">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>




    <table>
        <tr>

    <div class="row">
        <div class="col-md-10">
            <h3>Books</h3>

            <table class="table table-stripped table-bordered">
                <thead>
                    <tr>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["TitleSortParam"]">Title</a>
                                </th>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["GenreSortParam"]">Genre</a>
                                </th>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["IsbnSortParam"]">ISBN</a>
                                </th>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["PagesSortParam"]">Total Pages</a>
                                </th>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["AuthorSortParam"]">Author</a>
                                </th>
                                <th>
                                    <a asp-action="GetAll" asp-route-sortOrder="@ViewData["PublisherSortParam"]">Publisher</a>
                                </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                            <td >
                                <a class="btn" href="/Book/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>  